{
    "name": "dkcode",
    "displayName": "DkCode",
    "description": "WBDK Language Extension",
    "publisher": "ChrisMrazek",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cmrazek/DkCode.git"
    },
    "activationEvents": [
        "onLanguage:dk",
        "onLanguage:dkdict",
        "onCommand:dkcode.addFileHeader",
        "onCommand:dkcode.insertDate"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "dk",
                "aliases": [
                    "DK",
                    "dk"
                ],
                "extensions": [
                    ".cc",
                    ".cc+",
                    ".cc&",
                    ".ct",
                    ".ct+",
                    ".ct&",
                    ".f",
                    ".f+",
                    ".f&",
                    ".gp",
                    ".gp+",
                    ".gp&",
                    ".i",
                    ".i+",
                    ".i&",
                    ".id",
                    ".ie",
                    ".il",
                    ".nc",
                    ".nc+",
                    ".nc&",
                    ".sc",
                    ".sc+",
                    ".sc&",
                    ".sp",
                    ".sp+",
                    ".sp&",
                    ".st",
                    ".st+",
                    ".st&"
                ],
                "configuration": "./dk-language-configuration.json"
            },
            {
                "id": "dkdict",
                "aliases": [
                    "DKDict",
                    "dkdict"
                ],
                "extensions": [
                    ".t",
                    ".t+",
                    ".t&"
                ],
                "configuration": "./dkdict-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dk",
                "scopeName": "source.dk",
                "path": "./syntaxes/dk.tmLanguage.json"
            },
            {
                "language": "dkdict",
                "scopeName": "source.dkdict",
                "path": "./syntaxes/dkdict.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "dkcode.addFileHeader",
                "title": "Add DK File Header",
                "category": "editing"
            },
            {
                "command": "dkcode.insertDate",
                "title": "Insert DK Date",
                "category": "editing"
            }
        ],
        "keybindings": [
            {
                "command": "dkcode.addFileHeader",
                "key": "alt+o alt+h",
                "when": "editorFocus && !editorReadOnly"
            },
            {
                "command": "dkcode.insertDate",
                "key": "alt+o alt+y",
                "when": "editorFocus && !editorReadOnly"
            }
        ],
        "configuration": {
            "title": "DK",
            "properties": {
                "dkcode.userInitials": {
                    "type": "string",
                    "default": "",
                    "description": "User initials for tagging"
                },
                "dkcode.workItemId": {
                    "type": "string",
                    "default": "",
                    "description": "Work item ID (e.g. CR1234) for tagging"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.18.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.0",
        "vscode-languageserver": "^6.1.0",
        "vscode-languageserver-textdocument": "^1.0.0"
    }
}
